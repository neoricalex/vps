# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|

	config.vm.define "VPS_DEV"
	config.vm.box = "neoricalex/ubuntu"
	config.vm.box_version = "0.0.4"
	#config.vm.box_url = ".vagrant-libs/virtualbox.box"
	config.disksize.size = '128GB'
	config.ssh.insert_key = false
	config.ssh.private_key_path = ['~/.vagrant.d/insecure_private_key', 'vagrant-libs/ssh/neoricalex'] 
	config.vm.provision "file", source: "vagrant-libs/ssh/neoricalex.pub", destination: "~/.ssh/authorized_keys"

	config.vm.synced_folder "./", "/vagrant", disabled: true
	config.vm.synced_folder "./", "/neoricalex", disabled: false
	
	config.vm.network :forwarded_port, guest: 22, host: 1234

	config.vm.provider "virtualbox" do |vb|
		vb.customize ["modifyvm", :id, "--graphicscontroller", "vmsvga"]
		vb.customize ["modifyvm", :id, "--nested-hw-virt", "on"]
		vb.customize ["modifyvm", :id, "--nestedpaging", "on"]
		vb.name		= "VPS_DEV"
		vb.memory	= "4096"
		vb.cpus   	= "3"
	end

	config.vm.provision :shell,
	path: "vagrant-libs/requerimentos.sh"

end
