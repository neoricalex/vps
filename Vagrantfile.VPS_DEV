# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|

	config.vm.define "VPS_DEV"
	config.vm.box = "neoricalex/ubuntu"
	config.vm.box_version = "0.0.2"
	#config.vm.box_url = ".vagrant-libs/virtualbox.box"
	config.disksize.size = '128GB'

  	config.vm.synced_folder "./", "/vagrant", disabled: false

	config.vm.provider "virtualbox" do |vb|
		vb.customize ["modifyvm", :id, "--graphicscontroller", "vmsvga"]
		vb.customize ["modifyvm", :id, "--nested-hw-virt", "on"]
		vb.customize ["modifyvm", :id, "--nestedpaging", "on"]
		#vb.customize ["setextradata", :id, "VBoxInternal2/SharedFoldersEnableSymlinksCreate/vagrant", "1"]
		#vb.customize ["sharedfolder", "add", :id, "--name", "vagrant", "--hostpath", File.dirname(__FILE__)]
		vb.name		= "VPS_DEV"
		vb.memory	= "6144"
		vb.cpus   	= "4"
	end

	# https://github.com/hashicorp/vagrant/issues/11725
	config.vm.provision :shell, 
		path: "vagrant-libs/requerimentos_vps_dev.sh"
end
